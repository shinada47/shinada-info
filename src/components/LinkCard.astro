---
// src/components/LinkCard.astro
const { title, url, description, icon } = Astro.props;
---

<a href={url} target="_blank" rel="noopener noreferrer" 
   class="group flex w-full items-center gap-2 p-4 bg-card border border-line rounded-xl transition-all duration-200 ease-out hover:bg-page">
  
  <div class="w-10 h-10 flex-shrink-0">
    <img src={icon} alt="" class="w-full h-full object-contain" />
  </div>

  <div class="flex-grow min-w-0 text-left">
    <div class="flex items-baseline gap-2 min-w-0">
      <span class="text-body font-bold shrink-0">{title}</span>
      <span class="text-detail truncate">{url.replace("https://", "")}</span>
    </div>
    
    <p class="text-caption text-sub mt-2 truncate">{description}</p>
  </div>

  <div class="text-line transition-transform duration-200 ease-out group-hover:translate-x-1">
    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m9 18 6-6-6-6"/></svg>
  </div>
</a>